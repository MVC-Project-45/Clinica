@model List<Patient>
@{
    Layout = "myLay";
}
<link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/style.css">

<div class="head-title">
    <div class="left">
        <h1>Dashboard</h1>
        <ul class="breadcrumb">
            <li>
                <a href="#">Dashboard</a>
            </li>
            <li><i class='bx bx-chevron-right'></i></li>
            <li>
                <a class="active" href="#">Home</a>
            </li>
        </ul>
    </div>
    <a href="#" class="btn-download">
        <i class='bx bxs-cloud-download'></i>
        <span class="text">Download PDF</span>
    </a>
</div>

<ul class="box-info">
    <li>
        <i class='bx bxs-group'></i>
        <span class="text">
            <h3>@(ViewBag.PatientsCount ?? 0)</h3>
            <p>No of Patients </p>
        </span>
    </li>
    <li>
        <i class='bx bxs-calendar-check'></i>

        <span class="text">
            <h3>@(ViewBag.ApointsCount ?? 0)</h3>
            <p>No of Appointments</p>
        </span>
    </li>
    <li>
        <i class='bx bxs-dollar-circle'></i>
        <span class="text">
            <h3>$@(ViewBag.TotalMoney ?? 0.0)</h3>
            <p>Total Money</p>
        </span>
    </li>
</ul>

<form asp-controller="DoctorAdmin" asp-action="SearchByName">
    <div class="form-input">
        <input type="search" name="name" placeholder="Search..." class="searchpatient">
        <button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
    </div>
</form>

@if (Model != null)
{
 <table class="table table-bordered active">
        <thead>
            <th>Name</th>
            <th>Age</th>
            <th>Gender</th>
            <th>PhoneNumber</th>
        </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@patient.Name</td>
                <td>@patient.age</td>
                <td>@patient.Gender</td>
                <td>@patient.PhoneNumber</td>
            </tr>
        }
    </tbody>
</table>
}
else
{
    <p>No patients found.</p>
}

<style>
.searchpatient {
    margin-bottom: 15px;
    width: 91%;
    border: 1px solid #ccc;
    border-radius: 4px;
    padding: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: box-shadow 0.3s ease;
}

.searchpatient:hover, .searchpatient:focus {
    box-shadow: 0 4px 12px rgba(0, 0, 255, 0.2); 
    border-color: #007bff; 
}

.search-btn {  
background-color: #007bff; 
border: none;
border-radius: 4px;
color: white;
padding: 8px 12px;
cursor: pointer;
transition: background-color 0.3s ease, box-shadow 0.3s ease;
}

.search-btn:hover {
    background-color: #0056b3; 
    box-shadow: 0 4px 8px rgba(0, 0, 255, 0.3);
}

.search-btn i {
    font-size: 16px;
}

</style>

<script src="~/js/script.js"></script>
