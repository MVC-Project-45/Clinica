
@model List<Review>
    @if (Model.Count > 0)
    {
        foreach (var review in Model)
        {
            <div class="comment-box">
           <div class="comment-section d-flex align-items-start" style="padding:0px">
        <div class="user-img">
            <img src="/image/user.jfif" alt="User Image">
        </div>
        <div class="flex-grow-1">
            <h5>محمد طارق</h5>
                    <partial name="_Rate" model="@review.Rate" />

                </div>
              
        </div>
            <div style=" margin-right:4rem">
                <p class="mt-2">@review.Comment</p>
                <div class="d-flex justify-content-between">
                    <span class="text-muted">@review.Date</span>
                </div>
            </div>
        </div>
        }
    }
 


