@using MVC_Final.Settings
@model MVC_Final.ViewModels.CreateSpecializationFormViewModel

@{
    ViewData["title"] = "Add Specialization";
    SelectList _Doctors = new SelectList(Model.Doctors, "Id", "Name");
}


<form action="/admin/save" method="post" enctype="multipart/form-data">
    <div class="row">

        <div class="form-group">
            <label asp-for="Name" class="form-label mt-4"></label>
            <input type="text" class="form-control" asp-for="Name" placeholder="Specialization Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SelectedDoctors" class="form-label mt-4"></label>
            <select class="form-select" asp-for="SelectedDoctors" asp-items="Model.Doctors">
                <option></option>
            </select>
            <span asp-validation-for="SelectedDoctors" class="text-danger"></span><br />
        </div><br />
        @*  <div class="form-group">
        <label asp-for="Cover" class="form-label mt-4"></label>
        <input type="file" class="form-control" asp-for="Cover" />
        <span asp-validation-for="Cover" class="text-danger d-block"></span>
        </div> *@
        <div class="mb-3">
            <label for="Image" class="form-label">Image</label>
            <input type="file" name="image" class="form-control" id="image">
        </div>
        <button type="submit" class="btn btn-primary w-100 wy-2">Add</button>

    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/filesize-validator.js" asp-append-version="true"></script>
    <script src="~/js/game-form.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
}